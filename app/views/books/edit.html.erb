<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <% if @book.errors.include?(:title) %>
    <p style="color: red;"><%= @book.errors.full_messages_for(:title).first %></p>
  <% end %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <% if @book.errors.include?(:body) %>
    <p style="color: red;"><%= @book.errors.full_messages_for(:body).first %></p>
  <% end %>

  <%= f.submit 'Update Book' %>

  <%= link_to 'Show', book_path(@book) %>
  <%= link_to 'Back', books_path %>

<% end %>